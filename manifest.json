{
    "manifest_version": 3,
    "name": "Commit Message Generator",
    "description": "A generator that generates a random commit message using the whatthecommit api",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "script.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}